<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sound">

    <insert id="insert" parameterType="Sound">
        INSERT INTO
          `sound`
          ( `id`, `title`, `artist`, )
        VALUES
          ( #{id}, #{title}, #{artist} )
    </insert>
    
    <insert id="insertTimeStamp" parameterType="Sound">
        INSERT INTO
          `sound_time_stamp`
          ( `soundPn`, `timeStamp`)
        VALUES
          ( #{pn}, SYSDATE() )
    </insert>
    
    <select id="isExist" parameterType="Sound">
        SELECT
          `pn`, `id`, `title`, `artist`
        FROM
          `sound`
        WHERE
          `id` = #{id}
        AND  
          `title` = #{title}
        AND
          `artist` = #{artist}
    </select>
    
</mapper>
