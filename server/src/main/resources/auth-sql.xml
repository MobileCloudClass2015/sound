<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="auth">
    
    <insert id="insert" parameterType="Auth">
        INSERT INTO
            `auth`
            ( `id`, `registerDate`, `name`, `email` )
        VALUES
            ( #{id}, SYSDATE(), #{name}, #{email} )
    </insert>

    <select id="isExist" parameterType="Auth" resultType="Auth">
        SELECT
          `id`, `registerDate`
        FROM
          `auth`
        WHERE
          `id` = #{id}
    </select>

    <delete id="delete" parameterType="Auth">
        DELETE FROM
          `auth`
        WHERE
          `id` = #{id}
    </delete>

    <select id="selectAuth" parameterType="String" resultType="Auth">
        SELECT
          `id`, `name`, `email`, `registerDate`
        FROM
          `auth`
        WHERE
          `id` = #{id}
    </select>
    
    <select id="selectCountAuths" parameterType="AuthSearchFilter" resultType="Integer">
        SELECT
          COUNT(*)
        FROM
          `auth`
    </select>
    
    <select id="selectAuths" parameterType="AuthSearchFilter" resultType="Auth">
        SELECT
          `id`, `name`, `email`, `registerDate`
        FROM
          `auth`
        ORDER BY
          `registerDate` DESC
        LIMIT #{pagination.itemSeqBegin}, #{pagination.numItemsPerPage}
    </select>

</mapper>
